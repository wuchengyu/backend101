{
  "name": "backend-yarn-workspace-practice",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "core",
    "router",
    "web"
  ],
  "devDependencies": {
    "@styled-jsx/plugin-sass": "^4.0.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.11.6",
    "@types/react": "^17.0.33",
    "babel-jest": "^27.3.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-next": "^12.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.0.0",
    "husky": "4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.0",
    "jest-watch-typeahead": "^1.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.43.4",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "scripts": {
    "doc:gen": "node scripts/generate-swagger.js",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix . --quiet",
    "server:start": "NODE_ENV=prouction node --inspect -r dotenv/config router",
    "server:dev": "yarn doc:gen && NODE_ENV=development nodemon --inspect -r dotenv/config router dotenv_config_path=.env.dev",
    "test": "jest --verbose",
    "test:coverage": "yarn test --coverage",
    "web:start": "yarn workspace web dev",
    "web:dev": "yarn workspace web dev",
    "web:lint": "yarn workspace web lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "router/**/*.js": [
      "yarn doc:gen",
      "git add router/swagger.json"
    ]
  }
}
