{
  "name": "backend-yarn-workspace-practice",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "core",
    "router"
  ],
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.12",
    "prettier": "^2.4.1"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "scripts": {
    "doc:gen": "node scripts/generate-swagger.js",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix . --quiet",
    "start": "NODE_ENV=prouction nodemon --inspect -r dotenv/config router",
    "start:dev": "NODE_ENV=development nodemon --inspect -r dotenv/config router dotenv_config_path=.env.dev",
    "test": "jest --verbose",
    "test:coverage": "yarn test --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
